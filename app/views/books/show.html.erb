<%= render "books/list", books: @books %>

<h2>Book detail</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :image, :fill, 50, 50, format: 'jpeg' %>
          <p><%= @user.name %></p>
        <% end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.opinion %></td>
      <td><%= link_to "Edit", edit_book_path %></td>
      <td><%= link_to "Destroy"%></td>
    </tr>
  </tbody>
</table>