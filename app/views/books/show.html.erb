<%= render "books/list", book: @book, user: @user %>

<h2>Book detail</h2>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :image, :fill, 50, 50, format: 'jpeg' %>
          <p><%= @user.name %></p>
        <% end %>
      </td>
      <td><%= @books.title %></td>
      <td><%= @books.opinion %></td>
      <% if @books.user == current_user %>
        <td><%= link_to "Edit", edit_book_path %></td>
        <td><%= link_to "Destroy"%></td>
      <% end %>
    </tr>
  </tbody>
</table>