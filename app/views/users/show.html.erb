<%= render "books/list", books: @books %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book_path(book.id) do%>
          <%= book.title %>
          <% end %>
        </td>
      <td><%= book.opinion %></td>
    </tr>
  <% end %>
  </tbody>
</table>