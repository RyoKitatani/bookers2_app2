<% if @user.errors.any? %>
  <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<h1>User info</h1>
<%= form_with model: @user, local:true do |f| %>
  <label>Name</label><br>
  <%= f.text_field :name %><br>
  <label>Image</label><br>
  <%= f.attachment_field :image %><br>
  <label>Introduction</label><br>
  <%= f.text_area :introduction %><br>
  <%= f.submit "Update User "%>
<% end %>